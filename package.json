{
    "name": "RunKittyRun",
    "version": "1.1.0",
    "description": "",
    "license": "MIT",
    "main": "src/main.ts",
    "packageManager": "yarn@1.22.22",
    "scripts": {
        "test": "ts-node --transpile-only scripts/test.ts",
        "test-launch": "ts-node --transpile-only scripts/test.ts --launch",
        "test-no-launch": "ts-node --transpile-only scripts/test.ts --no-launch",
        "test-memory-handler": "set \"SCRIPT=test-memory-handler\" && yarn test-no-launch && ts-node ../../platform/scriptz/src/debug-memory-handler.ts && yarn test-launch",
        "build": "ts-node --transpile-only scripts/build.ts",
        "deploy": "yarn build && powershell cp './dist/bin/map.w3x' '~/Documents/Warcraft III/Maps/Maps/Ts/Mec.w3x'",
        "release": "yarn build && php ../bin/wrapLUAforWE.php",
        "release-test": "yarn release && ts-node scripts/releaseTest.ts",
        "release-test-memory-handler": "set \"SCRIPT=test-memory-handler\" && yarn build && ts-node ../../platform/scriptz/src/debug-memory-handler.ts \"./dist/tstl_output_extended.lua\" && php ../bin/wrapLUAforWE.php && ts-node scripts/releaseTest.ts",
        "release-test-publish": "yarn release && ts-node scripts/releaseTest.ts --publish",
        "dev": "npm-watch",
        "build:defs": "ts-node scripts/dev",
        "prettier": "prettier --write src/**/*.ts"
    },
    "devDependencies": {
        "@types/fs-extra": "8.1.1",
        "@types/node": "12.19.1",
        "@types/pako": "1.0.1",
        "@typescript-to-lua/language-extensions": "^1.0.0",
        "fs-extra": "8.1.0",
        "lua-types": "^2.13.1",
        "luamin": "^1.0.4",
        "mdx-m3-viewer-th": "^5.13.0",
        "npm-watch": "0.6.0",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "3.9.0",
        "tsutils": "3.17.1",
        "typescript": "5.0.4",
        "typescript-to-lua": "1.15.1",
        "w3ts": "^3.0.2",
        "war3-objectdata-th": "^0.2.8",
        "war3-transformer": "^3.0.9",
        "war3tstlhelper": "1.0.1",
        "winston": "^3.8.2"
    },
    "watch": {
        "build:defs": {
            "patterns": [
                "./maps/*"
            ],
            "extensions": "lua",
            "legacyWatch": true
        }
    }
}
